module Common

lexical syntax

  [a-zA-Z][a-zA-Z0-9]* -> ID
  "-"? [0-9]+          -> INT

  "\"" StringChar* "\"" -> STRING
  ~[\"\n]               -> StringChar
  "\\\""                -> StringChar
  BackSlashChar         -> StringChar
  "\\"                  -> BackSlashChar

lexical restrictions

  %% Ensure greedy matching for lexicals

  INT           -/- [0-9]
  ID            -/- [a-zA-Z0-9\_]

  %% Backslash chars in strings may not be followed by "

  BackSlashChar -/- [\"]
