module example

templates

  Start = <<
    module <modulename : ID>
    <Definition* ; separator="\n">
  >> {cons("Module")}

  Definition = <<
    entity <ID> {
      <Property* ; separator="\n">
    }
  >> {cons("Entity"), blank}

  Property = [[
    [x : ID] : [T : Type]
  ]] {cons("Property"), blank}

context-free syntax

  Type = ID {cons("Type")}

lexical syntax

  [A-Za-z][A-Za-z0-9]* -> ID
  CONTENTCOMPLETE = [A-Za-z0-9]* "CONTENTCOMPLETE" [0-9]+ {cons("CONTENTCOMPLETE")}
